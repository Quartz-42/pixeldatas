{% for label, messages in app.flashes %}
	<div class="alert alert-{{ label }}">
		{% for message in messages %}
			<div class="{% if label == 'success' %}bg-green-100 text-green-700 border-green-400{% elseif label in ['danger', 'error', 'alert'] %}bg-red-100 text-red-700 border-red-400{% else %}bg-white text-gray-700 {% endif %} p-4 rounded mb-4 shadow-lg text-center border">
				{{ message }}
			</div>
		{% endfor %}
	</div>
{% endfor %}
