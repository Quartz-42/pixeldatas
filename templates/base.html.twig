<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="ie=edge">
		<meta name="description" content="PixelDatas est un site web qui vous permet de retrouver toutes les informations sur les Pokémons.">
		<meta name="author" content="PixelDatas">
		<meta name="robots" content="index, follow">
		<meta name="keywords" content="Pokémon, Jeux vidéo, Nintendo, Game Freak, PixelDatas">
		<meta name="view-transition">
		<title>
			{% block title %}PixelDatas
			{% endblock %}
		</title>
		<link rel="icon" href="{{ asset('img/favicon.png') }}">
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('styles/app.css') }}">
		{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body class="min-h-screen flex flex-col">
		{% block body %}
			{% include "shared/_navbar.html.twig" %}
			<main class="flex-grow">
				<div class="container mx-auto px-4">
					{% for label, messages in app.flashes %}
						<div class="alert alert-{{ label }}">
							{% for message in messages %}
								<div class="bg-green-500 text-white p-4 rounded mb-4">
									{{ message }}
								</div>
							{% endfor %}
						</div>
					{% endfor %}
				</div>
				{% block content %}{% endblock %}
			</main>
			{% include "shared/_footer.html.twig" %}
			{% include "shared/_back_to_top.html.twig" %}
		{% endblock %}
	</body>
</html>
