<div class="pokemon-card bg-white shadow-md p-2 lg:p-3 rounded-lg hover:shadow-lg transition transform hover:scale-105">

	<div>
		<h2 class="text-sm lg:text-base xl:text-lg font-bold text-gray-800 mb-1 flex flex-wrap items-baseline justify-center gap-1 lg:gap-2">
			<span class="text-center">{{ pokemon.name }}</span>
			<span class="text-xs lg:text-sm font-semibold bg-black text-amber-400 py-0.5 px-1 lg:py-1 lg:px-2 rounded-lg">NÂ°{{ pokemon.pokedexId }}</span>
			{% if pokemon.spriteGmax %}
				<span class="text-xs lg:text-sm font-semibold bg-black text-amber-400 py-0.5 px-1 lg:py-1 lg:px-2 rounded-lg">GMAX</span>
			{% endif %}
		</h2>
	</div>

	<div class="flex justify-between items-center mb-2 lg:mb-3">
		<div class="flex space-x-1 lg:space-x-2">
			{% for type in pokemon.types %}
				<div data-controller="popover" class="relative" data-action="mouseenter->popover#show mouseleave->popover#hide">
					<a href="{{ path('app_pokemon_type', {'type': type.name}) }}" data-turbo-frame="_top">
						<img class="w-5 h-5 lg:w-6 lg:h-6 xl:w-7 xl:h-7 rounded-lg" src="{{ type.image }}" alt="{{ type.name }}" fetchpriority="high">
						<template data-popover-target="content">
							<div data-popover-target="card" class="max-w-sm rounded-lg shadow-lg bg-white absolute left-0 bottom-8">
								<turbo-frame loading="lazy" id="type--{{ type.name }}" target="_top" src="{{ path('app_type_show_card', { 'type': type.name }) }}" data-skip-transition>
									<div class="p-3">
										<svg xmlns="http://www.w3.org/2000/svg" class="animate-spin" width="16" height="16" viewbox="0 0 18 18" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
											<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
											<path d="M12 3a9 9 0 1 0 9 9"></path>
										</svg>
									</div>
								</turbo-frame>
							</div>
						</template>
					</a>
				</div>
			{% endfor %}
		</div>
		<a href="{{ path('app_pokemon_gen', {'generation': pokemon.generation}) }}" class="text-sm lg:text-base 2xl:text-lg font-semibold text-red-500 underline" data-turbo-frame="_top">
			Gen.
			{{ pokemon.generation }}
		</a>
	</div>

	<div class="flex justify-center">
		<a href="{{ path('app_pokemon_details', {'name': pokemon.name}) }}" data-turbo-frame="_top">
			<img src="{{ pokemon.spriteRegular }}" alt="Image de {{ pokemon.name }}" class="w-full h-auto" fetchpriority="high">
		</a>
	</div>
</div>
