{% extends 'base.html.twig' %}
{% block content %}
	<div class="container container-fluid w-full mx-auto mt-8 p-6 bg-white shadow-lg rounded-lg">
		<h1 class="text-3xl font-bold text-gray-900 mb-6">Formulaire de contact</h1>
		{{ form_start(form) }}
		<div class="mb-4">
			{{ form_label(form.name, 'Nom', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
			{{ form_widget(form.name, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
			{{ form_errors(form.name) }}
		</div>
		<div class="mb-4">
			{{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
			{{ form_widget(form.email, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
			{{ form_errors(form.email) }}
		</div>
		<div class="mb-4">
			{{ form_label(form.subject, 'Sujet', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
			{{ form_widget(form.subject, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
			{{ form_errors(form.subject) }}
		</div>
		<div class="mb-4">
			{{ form_label(form.message, 'Message', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
			{{ form_widget(form.message, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
			{{ form_errors(form.message) }}
		</div>
		<div>
			<button type="submit" class="bg-amber-500 text-white font-bold py-2 px-4 rounded hover:bg-amber-700">
				Envoyer
			</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
